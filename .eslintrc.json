{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": ["airbnb", "prettier", "plugin:react/recommended"],

  "plugins": ["react"],

  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "react/function-component-definition": "off",
    "no-plusplus": "off"
  }
}
